<!--    USER-->
    <filter>
        <filter-name>AuthAccessFilter</filter-name>
        <filter-class>com.eagle.sausageshop.middleware.AuthAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthAccessFilter</filter-name>
        <url-pattern>/sign-up.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthAccessFilter</filter-name>
        <url-pattern>/sign-in.html</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AccessControlFilter</filter-name>
        <filter-class>com.eagle.sausageshop.middleware.AccessControlFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessControlFilter</filter-name>
        <url-pattern>/profile.html</url-pattern>
    </filter-mapping>


    <!-- Admin -->
    <filter>
        <filter-name>AdminAuthAccessFilter</filter-name>
        <filter-class>com.eagle.sausageshop.middleware.admin.AuthAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminAuthAccessFilter</filter-name>
        <url-pattern>/admin-login.html</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AdminAccessControlFilter</filter-name>
        <filter-class>com.eagle.sausageshop.middleware.admin.AccessControlFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminAccessControlFilter</filter-name>
        <url-pattern>/admin-dashboard.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAccessControlFilter</filter-name>
        <url-pattern>/admin-add-product.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAccessControlFilter</filter-name>
        <url-pattern>/admin-customers.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAccessControlFilter</filter-name>
        <url-pattern>/admin-orders.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAccessControlFilter</filter-name>
        <url-pattern>/admin-products.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAccessControlFilter</filter-name>
        <url-pattern>/admin-settings.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAccessControlFilter</filter-name>
        <url-pattern>/admin-add-category.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAccessControlFilter</filter-name>
        <url-pattern>/admin-/*</url-pattern>
    </filter-mapping>
</web-app>